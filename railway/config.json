{
  "build": {
    "builder": "nixpacks",
    "buildCommand": "npm run build"
  },
  "deploy": {
    "startCommand": "npm run start:prod",
    "healthcheck": {
      "path": "/health",
      "interval": 15,
      "timeout": 60,
      "grace_period": 30
    },
    "restartPolicyType": "on_failure",
    "restartPolicyMaxRetries": 3
  }
}
